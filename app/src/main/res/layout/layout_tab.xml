<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pagerTab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">



    <RadioButton
        android:id="@+id/tab_btn_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:paddingTop="3dp"
        android:drawableTop="@drawable/tab_btn1"
        android:text="安全简报"
        android:textSize="18sp"
        android:textColor="@color/tab_button_text" />

    <RadioButton
        android:id="@+id/tab_btn_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:button="@null"
        android:gravity="center"
        android:paddingTop="3dp"
        android:drawableTop="@drawable/tab_btn2"
        android:text="安全教育"
        android:textSize="18sp"
        android:textColor="@color/tab_button_text" />

    <RadioButton
        android:id="@+id/tab_btn_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:button="@null"
        android:gravity="center"
        android:paddingTop="3dp"
        android:drawableTop="@drawable/tab_btn3"
        android:text="安全测试"
        android:textSize="18sp"
        android:textColor="@color/tab_button_text" />

    <RadioButton
        android:id="@+id/tab_btn_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:button="@null"
        android:gravity="center"
        android:paddingTop="3dp"
        android:drawableTop="@drawable/tab_btn4"
        android:text="安全论坛"
        android:textSize="18sp"
        android:textColor="@color/tab_button_text" />
</RadioGroup>